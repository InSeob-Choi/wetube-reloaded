extends base

block content
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required, maxlength=80)
        input(name="description", placeholder="Video Description", value=video.description, required, minlength=20)
        input(name="hashtags", placeholder="Video Hashtags", value=video.hashtags.join(), required)
        input(value="Save", type="submit")